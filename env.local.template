# ==========================================
# LOCAL DEVELOPMENT CONFIGURATION TEMPLATE
# ==========================================
# Copy this to .env.local and fill in your values
# ==========================================

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Local Development URL (port 3000)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==========================================
# STRIPE CONFIGURATION
# ==========================================
# Stripe Mode: "test" for development, "live" for production
# Local development uses TEST MODE
STRIPE_MODE=test

# Test Mode Keys (for development)
STRIPE_TEST_SECRET_KEY=sk_test_your_test_secret_key_here
NEXT_PUBLIC_STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_TEST_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# Live Mode Keys (for production - not needed locally)
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_secret_key_here
NEXT_PUBLIC_STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_LIVE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Stripe Price IDs (created via script)
STRIPE_STARTER_PRICE_ID=price_your_starter_price_id_here
STRIPE_PRO_PRICE_ID=price_your_pro_price_id_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here

# ==========================================
# EMAIL CONFIGURATION (SMTP)
# ==========================================
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=your_smtp_from_email_here

# ==========================================
# EMAIL PROVIDER (RESEND) - Optional
# ==========================================
RESEND_API_KEY=re_your_resend_api_key_here

# ==========================================
# AI CONFIGURATION (OpenAI)
# ==========================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ==========================================
# SECURITY & CRON JOBS
# ==========================================
# Generate a secure random string: openssl rand -hex 32
SIGNING_TOKEN_SECRET=your_signing_token_secret_here
CRON_SECRET=your_cron_secret_here



